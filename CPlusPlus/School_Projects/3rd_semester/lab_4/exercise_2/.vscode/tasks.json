{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile all .cpp files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-g",
                "-o",
                "./bin/output",
                "$(*.cpp)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}