{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all cpp files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c++11",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/output/all",
                "${workspaceFolder}/*.cpp"
            ],
            "group": "build"
        },
        {
            "label": "build single cpp file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c++11",
                "-o",
                "${workspaceFolder}/output/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": "build"
        },
        {
            "label": "run all cpp files",
            "type": "shell",
            "command": "${workspaceFolder}/output/all",
            "group": "test"
        },
        {
            "label": "run single cpp file",
            "type": "shell",
            "command": "${workspaceFolder}/output/${fileBasenameNoExtension}",
            "group": "test"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}