{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all cpp files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c++17",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/output/all"
            ],
            "group": "build"
        },
        {
            "label": "run all cpp files",
            "type": "shell",
            "command": "${workspaceFolder}/output/all",
            "group": "test"
        }
    ]
}