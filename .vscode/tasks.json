{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all cpp files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c++11",
                "-o",
                "${workspaceFolder}/output/all",
                "${workspaceFolder}/*.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}